
@{
    ViewData["Title"] = "Index";
}
@using  BlogBasic.Core.Models
@model Thread

<h1>Edit a Thread</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ThreadName" class="control-label"></label>
                <input asp-for="ThreadName" class="form-control" />
                <span asp-validation-for="ThreadName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThreadDescription" class="control-label"></label>
                <input asp-for="ThreadDescription" class="form-control" />
                <span asp-validation-for="ThreadDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" id="summernote" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



